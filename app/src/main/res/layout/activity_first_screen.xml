<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/code">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="40"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="100">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60">
            <liquidButton.LiquidButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/splashToFacultyData"
                android:text="Faculty Details"
                android:textAlignment="center"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:foregroundGravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Faculty Details"
                android:textSize="10dp"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textFacultyData"
                android:textColor="@color/Black"
                android:visibility="invisible"/>




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40">

            <liquidButton.LiquidButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="syllabus"
                android:foregroundGravity="right"
                android:id="@+id/splashToSyllabus"
                android:layout_margin="0dp"
                android:padding="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Docs"
                android:gravity="center"
                android:textSize="15dp"
                android:id="@+id/textSyllabus"
                android:textColor="@color/Black"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_weight="30"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="0dp"
        android:paddingLeft="20dp">
        <liquidButton.LiquidButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Timetable"
            android:textAlignment="center"
            android:foregroundGravity="center"
            android:id="@+id/splashToTimeTable"
            android:fitsSystemWindows="true"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time Table"
            android:textAlignment="center"
            android:paddingLeft="15dp"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textTimeTable"
            android:textColor="@color/Black"
            android:visibility="invisible"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="30"
        android:layout_height="0dp"
        android:weightSum="100">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40">
            <liquidButton.LiquidButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/splashToAboutDev"
                android:text="About CSE"

                android:padding="0dp"
                android:layout_margin="0dp"
                android:foregroundGravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developers"
                android:gravity="center"
                android:textSize="9sp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textAboutDev"
                android:textColor="@color/Black"
                android:visibility="invisible"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="60">
            <liquidButton.LiquidButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/splashToAboutCSE"
                android:text="About CSE"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:foregroundGravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About CSE"

                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textAboutCse"
                android:textColor="@color/Black"
                android:visibility="invisible"/>
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_first_screen"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal"
android:background="@color/white"


    tools:context="com.example.sharathbhargav.timetable.FirstScreen">


    <RelativeLayout
    android:layout_width="300dp"
    android:layout_height="200dp"

        android:id="@+id/testLinear2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <liquidButton.LiquidButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Timetable"
android:foregroundGravity="left"
            android:id="@+id/splashToTimeTable"
            android:layout_alignParentTop="true"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="300dp"

        android:layout_height="200dp"
        android:id="@+id/testLinear3"
        android:layout_below="@+id/testLinear2"
        android:layout_alignParentEnd="true">

        <liquidButton.LiquidButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splashToAboutCSE"
            android:text="About CSE"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:foregroundGravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
             />

        <RelativeLayout
            android:layout_width="300dp"

            android:layout_height="200dp"
            android:id="@+id/testLinear5"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="83dp">

            <liquidButton.LiquidButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/splashToFacultyData"
                android:text="About CSE"
                android:padding="0dp"
                android:layout_margin="0dp"
                android:foregroundGravity="right"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:id="@+id/testLinear4"

        android:textAlignment="viewEnd"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <liquidButton.LiquidButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"
            android:text="syllabus"
            android:id="@+id/splashToSyllabus"

            android:layout_margin="0dp"
            android:padding="0dp"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="300dp"

        android:layout_height="200dp"
        android:id="@+id/testLinear6"
        android:layout_below="@+id/testLinear5"
        android:layout_alignParentEnd="true">

        <liquidButton.LiquidButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/splashToAboutDev"
            android:text="About CSE"
            android:padding="0dp"
            android:layout_margin="0dp"
            android:foregroundGravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            />

    </RelativeLayout>

</RelativeLayout>

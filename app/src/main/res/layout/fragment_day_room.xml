<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b4000000"
    tools:context="com.example.sharathbhargav.timetable.dayRoom">

    <!-- TODO: Update blank fragment layout -->
    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/dayRoom_Roomspinner"
        style="@style/spinner_backgorund"
        android:popupBackground="#0091Ea"
        android:layout_above="@+id/dayRoom_daySpinner"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp" />

    <Spinner
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/dayRoom_daySpinner"
        style="@style/spinner_backgorund"
        android:popupBackground="#0091Ea"
android:layout_marginTop="50dp"
        android:layout_marginBottom="106dp"
        android:layout_above="@+id/dayRoomSearchButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textAlignment="center"
        android:id="@+id/dayRoomSearchButton"
        android:background="@drawable/name_button_shape"
        android:textColor="#2196F3"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="129dp" />



</RelativeLayout>

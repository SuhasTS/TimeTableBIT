<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.bit.cse.daySem">

    <!-- TODO: Update blank fragment layout -->

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/daySem_Semspinner"
        android:background="@color/spinner_background"
        android:popupBackground="@color/popup_background_color"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="10dp"
        android:elevation="4dp"
        android:layout_above="@+id/daySem_daySpinner"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/daySem_daySpinner"
        android:background="@color/spinner_background"
        android:popupBackground="@color/popup_background_color"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:elevation="4dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textAlignment="center"
        android:id="@+id/daySemSearchButton"
        android:textStyle="normal"
        android:textSize="25dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:elevation="4dp"
        android:background="@color/search_button_color"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/daySem_daySpinner"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/daySemViewEntireWeekButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/daySemSearchButton"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/schedule_button_color"
        android:elevation="4dp"
        android:text="View Entire week schedule"/>





</RelativeLayout>

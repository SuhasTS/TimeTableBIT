<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.sharathbhargav.timetable.aboutDevelopers"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/aboutDevCard1"
        android:paddingBottom="30dp"
        app:cardBackgroundColor="@color/autoComplete"
        android:layout_marginTop="100dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Sharath S Bhargav"
                android:textSize="25dp"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android developer"
                android:textAlignment="center"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:paddingLeft="25dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/aboutDevCard2"
        android:layout_below="@id/aboutDevCard1"
        android:layout_marginTop="25dp"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="@color/autoComplete"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Suhas T S"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:paddingLeft="55dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Android developer"
                android:textAlignment="center"
                android:textSize="15dp"
                android:textColor="@color/black"
                android:layout_marginTop="5dp"
                android:paddingLeft="55dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/aboutDevCard3"
        android:layout_marginTop="25dp"
        android:layout_below="@id/aboutDevCard2"
        app:cardBackgroundColor="@color/autoComplete"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Ullas Diwakar"
                android:paddingLeft="55dp"
                android:textColor="@color/black"
                android:textSize="25dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="UI developer"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:paddingLeft="55dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:layout_marginTop="25dp"
        android:layout_below="@id/aboutDevCard3"
        app:cardBackgroundColor="@color/autoComplete"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Suchit Rotti"
                android:paddingLeft="55dp"
                android:textSize="25dp"
                android:textColor="@color/black"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="UI developer"
                android:textSize="15dp"
                android:paddingLeft="55dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
